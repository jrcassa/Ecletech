# Configurações da Aplicação
APP_NOME="Ecletech API"
APP_AMBIENTE="desenvolvimento"
APP_DEBUG="true"
APP_URL="http://localhost"
APP_TIMEZONE="America/Sao_Paulo"

# Configurações do Banco de Dados
DB_DRIVER="mysql"
DB_HOST="localhost"
DB_PORTA="3306"
DB_NOME="ecletech"
DB_USUARIO="root"
DB_SENHA=""
DB_CHARSET="utf8mb4"

# Configurações JWT
JWT_CHAVE_SECRETA="sua_chave_secreta_super_segura_aqui_mude_em_producao"
JWT_ALGORITMO="HS256"
JWT_EXPIRACAO="3600"
JWT_REFRESH_EXPIRACAO="86400"
JWT_EMISSOR="Ecletech"

# Configurações de Segurança
CSRF_HABILITADO="true"
CSRF_EXPIRACAO="3600"

# Requisitos de Senha
SENHA_MIN_TAMANHO="8"
SENHA_REQUER_MAIUSCULA="true"
SENHA_REQUER_MINUSCULA="true"
SENHA_REQUER_NUMERO="true"
SENHA_REQUER_ESPECIAL="true"

# Proteção contra Brute Force (MySQL)
BRUTE_FORCE_MAX_TENTATIVAS="5"
BRUTE_FORCE_JANELA_TEMPO="15"
BRUTE_FORCE_TEMPO_BLOQUEIO="30"
BRUTE_FORCE_RASTREAR_POR_IP="true"
BRUTE_FORCE_RASTREAR_POR_EMAIL="true"

# Proteção Legacy (Rate Limit)
TENTATIVAS_LOGIN_MAX="5"
BLOQUEIO_TEMPO="900"

# Rate Limiting
RATE_LIMIT_HABILITADO="true"
RATE_LIMIT_MAX_REQUISICOES="100"
RATE_LIMIT_JANELA_TEMPO="60"

# Configurações CORS
CORS_HABILITADO="true"
CORS_ORIGENS_PERMITIDAS="*"
CORS_METODOS_PERMITIDOS="GET,POST,PUT,DELETE,OPTIONS"
CORS_CABECALHOS_PERMITIDOS="Content-Type,Authorization,X-CSRF-Token"
CORS_EXPOR_CABECALHOS="Authorization"
CORS_PERMITIR_CREDENCIAIS="true"
CORS_MAX_AGE="86400"

# Configurações de Auditoria
AUDITORIA_HABILITADA="true"
AUDITORIA_REGISTRAR_REQUISICOES="true"
AUDITORIA_REGISTRAR_RESPOSTAS="false"
